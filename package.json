{
  "name": "vactit-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "src/apps/*",
    "src/packages/*",
    "src/services/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=src/apps/web",
    "dev:api": "npm run dev --workspace=src/services/api",
    "dev:worker": "npm run dev --workspace=src/services/worker",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev:worker\" \"npm run dev\"",
    "build": "npm run build --workspaces --if-present",
    "build:api": "npm run build --workspace=src/services/api",
    "build:web": "npm run build --workspace=src/apps/web",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "docker:up": "cd src/infra/docker && docker-compose up -d",
    "docker:down": "cd src/infra/docker && docker-compose down",
    "prisma:generate": "cd src/services/api/prisma && npx prisma generate",
    "prisma:migrate": "cd src/services/api/prisma && npx prisma migrate dev",
    "prisma:studio": "cd src/services/api/prisma && npx prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "@supabase/supabase-js": "^2.89.0",
    "@types/react-google-recaptcha": "^2.1.9",
    "mupdf": "^1.26.4",
    "nodemailer": "^7.0.12",
    "react-google-recaptcha": "^3.1.0",
    "react-spinners": "^0.17.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
